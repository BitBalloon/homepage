
<div class="main blog">
  <section class="sheet">


    <div class="row">
      <div class="columns large-12">

        <article class="hentry">
          <header>
            <h2 class="entry-title text-center">{{{ title }}}</h2>

            <p class="entry-meta">
              Written by {{author}} on
              <time class="updated" datetime="{{#iso_date}}{{ published_date }}{{/iso_date}}" pubdate>{{#long_date}}{{published_date}}{{/long_date}}</time>
            </p>
          </header>

          <div class="entry-content">
            <hr/>
            {{{content}}}

            <hr class="extra-space"/>
          </div>

          <div class="read-next">
            <h5>NEXT TO READ</h4>
           {{#read_next_posts}}
              <h4><a href="{{ permalink }}">{{ title }}</a></h4>
              <p class="description">{{{ description }}}</p>
              <p class="author">An article by {{author}}</p>
            {{/read_next_posts}}
          </div>

          <div class="social-content">
            <hr class="extra-space"/>
            <div id="disqus_block">
              {{{disqus_snippet}}}
            </div>
          </div>

        </article>
      </div>
    </div>

  </section>
</div>

